DATA: lv_name  TYPE lvc_fname,
      lv_label TYPE string.

DO 28 TIMES.
  lv_name  = |CI{ sy-index WIDTH = 2 PAD = '0' }|.
  lv_label = lv_name.

  TRY.
      lo_col ?= lo_columns->get_column( lv_name ).
      lo_col->set_short_text( lv_label ).
      lo_col->set_medium_text( lv_label ).
      lo_col->set_long_text( lv_label ).
      lo_col->set_visible( abap_true ).
    CATCH cx_salv_not_found.
  ENDTRY.
ENDDO.