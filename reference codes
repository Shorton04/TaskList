DATA(lo_cols) = lo_alv->get_columns( ).

TRY.
    lo_cols->get_column( 'OP_LTXT' )->set_technical( abap_true ).
  CATCH cx_salv_not_found.
ENDTRY.

TRY.
    lo_cols->get_column( 'TDFORMAT' )->set_technical( abap_true ).
  CATCH cx_salv_not_found.
ENDTRY.

TRY.
    lo_cols->get_column( 'CHAR_LTXT' )->set_technical( abap_true ).
  CATCH cx_salv_not_found.
ENDTRY.