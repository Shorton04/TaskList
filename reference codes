CLEAR ls_disp.
MOVE-CORRESPONDING ls_base TO ls_disp.

" Convert tolerances (FLTP â†’ CHAR)
DATA lv_tolun TYPE p LENGTH 16 DECIMALS 9.
DATA lv_tolob TYPE p LENGTH 16 DECIMALS 9.

lv_tolun = ls_base-toleranzun.
lv_tolob = ls_base-toleranzob.

WRITE lv_tolun TO ls_disp-toleranzun DECIMALS 9.
WRITE lv_tolob TO ls_disp-toleranzob DECIMALS 9.

REPLACE ',' WITH '.' IN ls_disp-toleranzun.
REPLACE ',' WITH '.' IN ls_disp-toleranzob.

" Continue building row
ls_disp-row_kind = 'O'.
PERFORM fill_ci_fields USING ls_base-steuerkz CHANGING ls_disp.
APPEND ls_disp TO gt_display.