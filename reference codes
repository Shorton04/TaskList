IF lv_has_char = abap_false.

  "--- Clear PLMK-related fields ---
  CLEAR: ls_disp-merknr,
         ls_disp-kurzt_char,
         ls_disp-pmethode,
         ls_disp-verwmerkm,
         ls_disp-toleranzun,
         ls_disp-toleranzob,
         ls_disp-pruefeinh,
         ls_disp-stichprver,
         ls_disp-katalgart1,
         ls_disp-auswmenge1,
         ls_disp-steuerkz,
         ls_disp-ltextkz,
         ls_disp-char_ltxt,
         ls_disp-tdformat,
         ls_disp-gueltigab,
         ls_disp-valid_to_c.

  "--- Clear CI1–CI28 and CI1_TXT–CI28_TXT ---
  DO 28 TIMES.
    DATA(lv_idx) = sy-index.

    ASSIGN COMPONENT |CI{ lv_idx WIDTH = 2 PAD = '0' }| OF STRUCTURE ls_disp TO FIELD-SYMBOL(<ci_raw>).
    ASSIGN COMPONENT |CI{ lv_idx WIDTH = 2 PAD = '0' }_TXT| OF STRUCTURE ls_disp TO FIELD-SYMBOL(<ci_txt>).

    IF <ci_raw> IS ASSIGNED.
      CLEAR <ci_raw>.
    ENDIF.

    IF <ci_txt> IS ASSIGNED.
      CLEAR <ci_txt>.
    ENDIF.
  ENDDO.

ENDIF.