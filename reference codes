DO 28 TIMES.
  lv_idx = sy-index.

  "Build CI01..CI28
  DATA(lv_name) = |CI{ lv_idx WIDTH = 2 PAD = '0' }|.
  TRANSLATE lv_name TO UPPER CASE.

  "Compute offset
  DATA(lv_offset) = lv_idx - 1.

  "Extract 1 character from STEUERKZ
  DATA(lv_char) = gs_base-steuerkz+lv_offset(1).

  "Assign to CI field
  gs_display-(lv_name) = lv_char.
ENDDO.