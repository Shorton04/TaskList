DATA lv_len TYPE i.
lv_len = strlen( gs_base-steuerkz ).

DO 28 TIMES.
  DATA(lv_idx) = sy-index.
  DATA(lv_offset) = lv_idx - 1.

  DATA(lv_name) = |CI{ lv_idx WIDTH = 2 PAD = '0' }|.

  DATA(lv_char) = ''.

  IF lv_offset < lv_len.
    lv_char = gs_base-steuerkz+lv_offset(1).   "extract correct character
  ENDIF.

  ASSIGN COMPONENT lv_name OF STRUCTURE gs_display TO FIELD-SYMBOL(<fs_ci>).
  IF <fs_ci> IS ASSIGNED.
    <fs_ci> = lv_char.
  ENDIF.

