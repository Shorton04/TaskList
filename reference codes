DATA(lo_layout) = lo_alv->get_layout( ).

IF gv_show_char = abap_false AND gv_show_ltxt = abap_false.
    lo_layout->set_key( value = 'DEFAULT' ).

ELSEIF gv_show_char = abap_true  AND gv_show_ltxt = abap_false.
    lo_layout->set_key( value = 'CHAR_ONLY' ).

ELSEIF gv_show_char = abap_false AND gv_show_ltxt = abap_true.
    lo_layout->set_key( value = 'OP_LT_ONLY' ).

ELSEIF gv_show_char = abap_true  AND gv_show_ltxt = abap_true.
    lo_layout->set_key( value = 'BOTH_LT' ).

ENDIF.