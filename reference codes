DATA: lt_ci_texts TYPE STANDARD TABLE OF string WITH EMPTY KEY.

CLEAR lt_ci_texts.

APPEND 'Quantitative Characteristic'           TO lt_ci_texts. "CI1
APPEND 'Measured Values Must Be Recorded'      TO lt_ci_texts. "CI2
APPEND 'Ref to Char Attribute Required'        TO lt_ci_texts. "CI3
APPEND 'Upper Specification Limit Indicator'   TO lt_ci_texts. "CI4
APPEND 'Lower Specification Limit Indicator'   TO lt_ci_texts. "CI5
APPEND 'Check Target Value'                    TO lt_ci_texts. "CI6
APPEND 'Inspection Scope'                      TO lt_ci_texts. "CI7
APPEND 'Long Term Inspection'                  TO lt_ci_texts. "CI8
APPEND 'Recording Type'                        TO lt_ci_texts. "CI9
APPEND 'Document Required'                     TO lt_ci_texts. "CI10
APPEND 'Characteristic Category'               TO lt_ci_texts. "CI11
APPEND 'Sync Active'                           TO lt_ci_texts. "CI12
APPEND 'Sample Qty Added'                      TO lt_ci_texts. "CI13
APPEND 'Destructive Inspection'                TO lt_ci_texts. "CI14
APPEND 'Calculated Characteristic'             TO lt_ci_texts. "CI15
APPEND 'Sampling Proc Required'                TO lt_ci_texts. "CI16
APPEND 'Quality Score Relevant'                TO lt_ci_texts. "CI17
APPEND 'No Changes Allowed'                    TO lt_ci_texts. "CI18
APPEND 'Record Number of Defects'              TO lt_ci_texts. "CI19
APPEND 'QM Subsystem Characteristic'           TO lt_ci_texts. "CI20
APPEND 'Specs Changeable'                      TO lt_ci_texts. "CI21
APPEND 'Test Equipment Required'               TO lt_ci_texts. "CI22
APPEND 'Auto Defect Recording'                 TO lt_ci_texts. "CI23
APPEND 'Change Documents Required'             TO lt_ci_texts. "CI24
APPEND 'SPC Characteristic'                    TO lt_ci_texts. "CI25
APPEND 'Print Indicator'                       TO lt_ci_texts. "CI26
APPEND 'Parameter Characteristic'              TO lt_ci_texts. "CI27
APPEND 'Process Characteristic'                TO lt_ci_texts. "CI28





DATA: lv_idx TYPE i VALUE 0,
      lv_name TYPE lvc_fname,
      lv_text TYPE string,
      lo_col  TYPE REF TO cl_salv_column.

LOOP AT lt_ci_texts INTO lv_text.
  lv_idx = lv_idx + 1.

  lv_name = |CI{ lv_idx WIDTH = 2 PAD = '0' }|.  "CI01..CI28
  TRANSLATE lv_name TO UPPER CASE.

  TRY.
      lo_col ?= lo_columns->get_column( lv_name ).
      lo_col->set_short_text( lv_text ).
      lo_col->set_medium_text( lv_text ).
      lo_col->set_long_text( lv_text ).
    CATCH cx_salv_not_found.
  ENDTRY.
ENDLOOP.





DATA lv_idx TYPE i.
CLEAR lv_idx.

DO 28 TIMES.
  lv_idx = sy-index.

  DATA(lv_name) = |CI{ lv_idx WIDTH = 2 PAD = '0' }|.
  TRANSLATE lv_name TO UPPER CASE.

  "Extract 1 character from STEUERKZ
  DATA(lv_char) = gs_base-steuerkz+( lv_idx - 1 )(1).

  "Assign to CI column in display structure
  gs_display-(lv_name) = lv_char.
ENDDO.