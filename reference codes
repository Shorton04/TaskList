DATA: lv_tolun TYPE p LENGTH 16 DECIMALS 9,
      lv_tolob TYPE p LENGTH 16 DECIMALS 9.

IF so_tolun IS NOT INITIAL.
  lv_tolun = so_tolun.
  IF gs_base-toleranzun < lv_tolun.
    CONTINUE.
  ENDIF.
ENDIF.

IF so_tolob IS NOT INITIAL.
  lv_tolob = so_tolob.
  IF gs_base-toleranzob > lv_tolob.
    CONTINUE.
  ENDIF.
ENDIF.



