"===========================================================
" DEBUG: Print all SALV column names
"===========================================================
DATA(lo_columns) = lo_alv->get_columns( ).
DATA(lt_names)   = lo_columns->get_column_names( ).
DATA(lv_name)    TYPE lvc_fname.

LOOP AT lt_names INTO lv_name.
  WRITE: / lv_name.
ENDLOOP.
"===========================================================