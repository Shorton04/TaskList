      "---------------------------------------------------------------*
      " Selections
      "---------------------------------------------------------------*
      lo_sel = lo_alv->get_selections( ).
      lo_sel->set_selection_mode( if_salv_c_selection_mode=>row_column ).

      "---------------------------------------------------------------*
      " Events â€“ handled by local handler instance
      "---------------------------------------------------------------*
      lo_events = lo_alv->get_event( ).

      DATA(lo_handler) = NEW lcl_event_handler( ).
      SET HANDLER lo_handler->on_user_command FOR lo_events.

      "---------------------------------------------------------------*
      " Display ALV
      "---------------------------------------------------------------*
      lo_alv->display( ).





