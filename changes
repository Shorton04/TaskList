FORM add_fc USING p_field p_text p_pos.

  CLEAR gs_fcat.

  gs_fcat-fieldname  = p_field.
  gs_fcat-coltext    = p_text.
  gs_fcat-reptext    = p_text.
  gs_fcat-seltext    = p_text.
  gs_fcat-col_pos    = p_pos.

  gs_fcat-edit       = 'X'.
  gs_fcat-f4availabl = 'X'.

  "--------------------------------------------------------------
  " ABSOLUTELY REQUIRED â†’ Prevent ALV from creating sorted table
  "--------------------------------------------------------------
  gs_fcat-key        = ''.     " Prevent generated KEY
  gs_fcat-keyfield   = ''.     " Prevent DDIC inferred KEY
  gs_fcat-hotspot    = ''.     " Prevent hotspot implicit key
  gs_fcat-ref_table  = ''.     " Prevent DDIC reference keys
  gs_fcat-ref_field  = ''.     

  APPEND gs_fcat TO gt_fcat.

ENDFORM.