CASE gs_display-row_kind.
  WHEN 'O'. gs_display-line_color = '0000'.
  WHEN 'C'. gs_display-line_color = '6100'.
  WHEN 'L'.
    IF is_characteristic = abap_false.
      gs_display-line_color = '5100'.   "Operation long text
    ELSE.
      gs_display-line_color = '3100'.   "Characteristic long text
    ENDIF.
ENDCASE.