DATA: lv_plnnr TYPE plko-plnnr,
      lv_merknr TYPE plmk-merknr.

"--- Apply ALPHA conversion (ECC Compatible)
lv_plnnr  = is_base-plnnr.
lv_merknr = is_base-merknr.

CALL FUNCTION 'CONVERSION_EXIT_ALPHA_OUTPUT'
  EXPORTING
    input  = lv_plnnr
  IMPORTING
    output = lv_plnnr.

CALL FUNCTION 'CONVERSION_EXIT_ALPHA_OUTPUT'
  EXPORTING
    input  = lv_merknr
  IMPORTING
    output = lv_merknr.

"--- Now build the longâ€“text name
lv_name = |{ is_base-plnty }{ lv_plnnr }{ is_base-plnal }{ lv_merknr }|.