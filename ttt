lv_index = 1.

LOOP AT lt_ci_texts INTO lv_text.

  lv_index_char = |{ lv_index WIDTH = 2 ALPHA = IN }|.
  CONCATENATE 'CI' lv_index_char INTO lv_ciname.

  TRY.
      lo_col ?= lo_columns->get_column( lv_ciname ).

      lo_col->set_long_text(  lv_text ).
      lo_col->set_medium_text( lv_text ).
      lo_col->set_short_text( lv_text ).   "<<< FIXED
    CATCH cx_salv_not_found.
  ENDTRY.

  lv_index = lv_index + 1.

ENDLOOP.