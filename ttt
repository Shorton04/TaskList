lv_index = 0.

DO 28 TIMES.
  lv_index = lv_index + 1.

  "Convert 1 → '01', 2 → '02', ..., 10 → '10'
  DATA(lv_idx_char) = |{ lv_index ALPHA = IN WIDTH = 2 }|.

  "Build CI01..CI28 fieldname
  DATA(lv_ciname) TYPE lvc_fname.
  CONCATENATE 'CI' lv_idx_char INTO lv_ciname.

  "Extract 1 character from STEUERKZ
  DATA(lv_char) = gs_base-steuerkz+lv_index(1).

  "Assign into CI field
  gs_display-(lv_ciname) = lv_char.

ENDDO.