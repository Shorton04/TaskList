lv_index = 1.

LOOP AT lt_ci_texts INTO lv_text.

  CONCATENATE 'CI' lv_index INTO lv_ciname.

  TRY.
      lo_col ?= lo_columns->get_column( lv_ciname ).
      lo_col->set_long_text( lv_text ).
      lo_col->set_medium_text( lv_text ).
      lo_col->set_short_text( lv_ciname ).
    CATCH cx_salv_not_found.
  ENDTRY.

  lv_index = lv_index + 1.

ENDLOOP.