
DO 28 TIMES.

  CALL FUNCTION 'CONVERSION_EXIT_ALPHA_INPUT'
    EXPORTING input  = lv_index
    IMPORTING output = lv_index_char.

  CONCATENATE 'CI' lv_index_char INTO lv_ciname.

  "Must be STRING or SALV will reject it
  READ TABLE lt_ci_texts INTO lv_text INDEX lv_index.

  TRY.
      lo_col ?= lo_columns->get_column( lv_ciname ).
      lo_col->set_long_text(  lv_text ).
      lo_col->set_medium_text( lv_text ).
      lo_col->set_short_text( lv_text ).
    CATCH cx_salv_not_found.
  ENDTRY.

  lv_index = lv_index + 1.

ENDDO