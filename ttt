" Hide all CI columns first
DO 28 TIMES.
  DATA(lv_num) = sy-index.

  " Convert number to 2-digit format (01..28)
  DATA(lv_index_char) TYPE char2.
  lv_index_char = |{ lv_num WIDTH = 2 ALPHA = IN }|.

  " Build CI column name e.g. CI01, CI02 ... CI28
  DATA(lv_ciname) = |CI{ lv_index_char }|.

  TRANSLATE lv_ciname TO UPPER CASE.

  hide_col lv_ciname.
ENDDO.